    <div class="container">
    <form action="/createProduct" method="post">

    <div class="form-group" style="margin-top: 25px;">
    <label for="name" style="color: #fa4993; font-weight:bold; font-size: 27px">Name:</label>
    <input type="text" class="form-control" name="txtName" style="margin-top: 10px;">
    <div style="font-size: 20px; color: #fa4993">{{nameError}}</div>
    </div>

    

    <div class="form-group" style="margin-top: 15px;">
    <label for="discription" style="color: #fa4993; font-weight:bold; font-size: 27px">Discription:</label>
    <input type="text" class="form-control" name="txtDiscription" style="margin-top: 10px;">
    <div style="font-size: 20px; color: #fa4993">{{DesError}}</div>
    </div>

    

    <div class="form-group" style="margin-top: 15px;">
    <label for="price" style="color: #fa4993; font-weight:bold; font-size: 27px">Price:</label>
    <input type="number" class="form-control" name="txtPrice" style="margin-top: 10px;" required>
    </div>

    

    <div class="form-group" style="margin-top: 15px;">
    <label for="price" style="color: #fa4993; font-weight:bold; font-size: 27px">Picture:</label>
    <input type="text" class="form-control" name="txtPicture" style="margin-top: 10px;" required>
    </div>

    <br>
    <br>
    
    <button type="submit" class="btn btn-success" style="font-weight: bold; font-size:20px">Create Product</button>
    <button type="cancel" class="btn btn-danger" style="margin-left: 20px; font-weight: bold; font-size: 20px;">Cancel</button>
    
